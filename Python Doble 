import time




class forConsultas(object):

	"""docstring for consulta"""
	def __init__(self, consulta):
		
		self.consulta = consulta
		
		
		def opciones(self) :

			if self.consulta == 0 : 
				for x in xrange(1,10):
					print "a, a, a"
					time.sleep(0.2)

			if self.consulta == 1 : 
				for x in xrange(1,10):
					print "A, A, A"
					time.sleep(0.2)

count = 0

while True : 

